# Environment configuration for Video Social Network Application

# Node.js Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Database Configuration
MONGODB_URI=mongodb://mongo-db:27017/video_social_db
MONGODB_DB=video_social_db
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_password_in_production

# Redis Configuration
REDIS_URL=redis://redis-cache:6379
REDIS_PASSWORD=change_this_redis_password

# Cloudinary Configuration (Required for media storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Application Configuration
APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,mkv
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp

# Rate Limiting
API_RATE_LIMIT=100
UPLOAD_RATE_LIMIT=10

# Logging
LOG_LEVEL=info